function largestPrimeFactor(number) {
  function isPrime(n) {
    for(let i = 2; i < n; i++) {
      if(n % i == 0) return false;
    }
    return true;
  }
  const arr = [];
  for(let i = 2; i <= 50; i++) {
    if(isPrime(i) && number % i == 0) arr.push(i)
  }
  return number.toString().length
  //return arr[arr.length - 1];
}

console.log(largestPrimeFactor(600851475143));
